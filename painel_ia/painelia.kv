<PainelControle>:
    orientation: 'vertical'
    padding: 20
    spacing: 15

    Label:
        text: root.status
        font_size: 22
        color: 1, 1, 1, 1
        size_hint_y: None
        height: self.texture_size[1] + 20

    ProgressBar:
        max: 100
        value: root.ameaca
        size_hint_y: None
        height: 25

    TextInput:
        id: campo_comando
        hint_text: "Digite um comando..."
        multiline: False
        size_hint_y: None
        height: 40

    BoxLayout:
        spacing: 10
        size_hint_y: None
        height: 50

        Button:
            text: "Ativar/Desligar IA"
            on_press: root.alternar_ia()

        Button:
            text: "Enviar Comando"
            on_press: root.enviar_comando()
