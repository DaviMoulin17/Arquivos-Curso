# Layout e desenho do MovableDot
<MovableDot>:
    canvas:
        Color:
            rgba: 1, 0, 0, 1  # Cor vermelha (R,G,B,A)
        Ellipse:
            pos: self.dot_pos  # Posição definida pela ReferenceListProperty
            size: 30, 30  # Tamanho do ponto (largura, altura)

    # Botão para mover para a esquerda
    Button:
        text: "Esquerda"
        size_hint: None, None
        size: 100, 50
        pos: 20, 20
        on_press: root.move_left()

    # Botão para mover para a direita
    Button:
        text: "Direita"
        size_hint: None, None
        size: 100, 50
        pos: 140, 20
        on_press: root.move_right()

    # Botão para mover para cima
    Button:
        text: "Cima"
        size_hint: None, None
        size: 100, 50
        pos: 260, 20
        on_press: root.move_up()

    # Botão para mover para baixo
    Button:
        text: "Baixo"
        size_hint: None, None
        size: 100, 50
        pos: 380, 20
        on_press: root.move_down()
