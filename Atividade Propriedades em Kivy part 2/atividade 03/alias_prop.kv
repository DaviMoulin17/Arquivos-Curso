<CalculatorWidget>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        text: f"Valor do número 1: {root.num1}"

    Label:
        text: f"Valor do número 2: {root.num2}"

    Label:
        text: f"Soma: {root.sum_result}"

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        spacing: 10

        Button:
            text: "Inserir número 1"
            on_press: root.num1 += 1

        Button:
            text: "Inserir número 2"
            on_press: root.num2 += 1

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        spacing: 10

        TextInput:
            text: str(root.num1)
            multiline: False
            input_filter: 'int'
            on_text_validate: root.num1 = int(self.text)

        TextInput:
            text: str(root.num2)
            multiline: False
            input_filter: 'int'
            on_text_validate: root.num2 = int(self.text)
