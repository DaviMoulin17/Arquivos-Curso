#:import MeshLinePlot kivy.garden.graph.MeshLinePlot

<AIControlPanel>:
    orientation: "vertical"
    padding: 20
    spacing: 15
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Painel de Controle da IA"
        font_size: "36sp"
        bold: True
        size_hint_y: None
        height: self.texture_size[1] + 15
        color: 0.2, 0.7, 1, 1

    Label:
        id: status_label
        text: root.status_text
        font_size: "20sp"
        size_hint_y: None
        height: self.texture_size[1] + 10
        color: 1, 0.8, 0, 1

    ProgressBar:
        id: threat_bar
        max: 100
        value: root.threat_level
        size_hint_y: None
        height: "30dp"
        background_color: 0.1, 0.1, 0.1, 1
        canvas.before:
            Color:
                rgba: (1, 0, 0, 1) if root.threat_level >= 80 else (1, 0.6, 0, 1) if root.threat_level >= 50 else (0, 1, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        size_hint_y: None
        height: "50dp"
        spacing: 15

        ToggleButton:
            id: toggle_btn
            text: "Ligar IA" if not root.ia_ativa else "Desligar IA"
            font_size: "20sp"
            on_press: root.toggle_ia()

        Button:
            text: "Enviar Comando"
            font_size: "20sp"
            on_press:
                root.execute_command(command_input.text)
                command_input.text = ""

    TextInput:
        id: command_input
        hint_text: "Digite um comando..."
        multiline: False
        size_hint_y: None
        height: "40dp"
        font_size: "18sp"
        on_text_validate: root.execute_command(self.text)

    Label:
        text: "Gráfico do Nível de Ameaça"
        size_hint_y: None
        height: "30dp"
        color: 0.4, 0.8, 1, 1
        bold: True

    Graph:
        id: threat_graph
        xlabel: 'Tempo'
        ylabel: 'Ameaça (%)'
        x_ticks_minor: 5
        x_ticks_major: 10
        y_ticks_major: 20
        y_grid_label: True
        x_grid_label: True
        padding: 5
        x_grid: True
        y_grid: True
        xmin: 0
        xmax: 50
        ymin: 0
        ymax: 100

    Label:
        text: "Log de Eventos"
        size_hint_y: None
        height: "30dp"
        color: 0.5, 0.8, 1, 1
        bold: True

    ScrollView:
        size_hint_y: 0.3

        GridLayout:
            id: log_layout
            cols: 1
            size_hint_y: None
            height: self.minimum_height

            Label:
                id: log_label
                text: "\\n".join(root.log_entries)
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                valign: "top"
                halign: "left"
                font_size: "14sp"
                color: 1, 1, 1, 1
