<ListaItensWidget>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        text: ', '.join(root.lista_de_compras)
        font_size: 24
        size_hint_y: None
        height: self.texture_size[1]

    BoxLayout:
        size_hint_y: None
        height: "48dp"
        spacing: 10

        TextInput:
            id: item_input
            multiline: False
            font_size: 20

        Button:
            text: "Adicionar Item"
            font_size: 20
            on_release:
                root.adicionar_item(item_input.text)
                item_input.text = ''
